{
  "name": "php-server",
  "main": "./lib/php-server",
  "version": "0.8.0",
  "description": "Run a local PHP server from within Atom, displaying the log in a bottom panel",
  "activationHooks": [
    "language-php:grammar-used"
  ],
  "activationCommands": {
    "atom-workspace": "php-server:start",
    ".tree-view": [
      "php-server:start-tree",
      "php-server:start-tree-route"
    ],
    "atom-text-editor": "php-server:start-document",
    "atom-text-editor:not(.mini)": "source-preview:toggle"
  },
  "repository": "https://github.com/harmsk/atom-php-server.git",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "portfinder": "latest",
    "open": "latest",
    "atom-message-panel": "latest",
    "atom-space-pen-views": "^2.0.3"
  },
  "providedServices": {
    "preview.provider": {
      "versions": {
        "0.1.0": "provide"
      }
    }
  },
  "scripts": {
    "preinstall": "apm install source-preview"
  }
}
